@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/admin.css"/>
<style>
    #sut {
        margin-left: 40px;
        margin-right: 120px;
        padding-left: 35px;
    }
    
    #sut h2 {
        color: #ff4500;
    }
    
    #sut .btn {
        background-color: white;
        color: #ff4000;
        padding: 5px;
        border: 1.5px solid #ff4000;
        font-weight: bold;
        font-size: 12px;
    }
    
    
</style>

@await Html.PartialAsync("Shared/_Validation_Area_From_Backend")

<div id="sut">
    <h2>Set User Type</h2>
    <form method="post" asp-action="SetUserTypeAction">
        <table class="table">
            <thead>
            <tr>
                <th>
                    Email
                </th>
                <th>
                    Set User Type
                </th>
            </tr>
            </thead>
            <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td >
                            <form asp-controller="Administrator" asp-action="SetUserTypeAction">
                                <button class="btn" type="submit" name="Id" value="@item.Id">Set As Administrator</button>
                            </form>
                        </td>
                    </tr>
                }
            }

            </tbody>

        </table>

    </form>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }

</div>
