@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @{
            string rawErrors = ViewBag.Error;
            string[] errors = rawErrors.Split('\n');
            foreach (var error in errors)
            {
                @error
                <br>
            }
            
        }
    </div>
}
@if (ViewBag.Inform != null)
{
    <div class="alert alert-warning" role="alert">
        @{
            string rawWarns = ViewBag.Inform;
            string[] warns = rawWarns.Split('\n');
            foreach (var warn in warns)
            {
                @warn
                <br>
            }
        }
    </div>
}
@if (ViewBag.Success != null)
{
    <div class="alert alert-success" role="alert">
        @{
            string rawSuccesses = ViewBag.Success;
            string[] successes = rawSuccesses.Split('\n');
            foreach (var success in successes)
            {
                @success
                <br>
            }
        }
    </div>
}
