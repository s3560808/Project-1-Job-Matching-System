@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

@* Style for page is found via this link under id reg*@
<link rel="stylesheet" href="~/css/reg.css"/> 

@*Identifier for css page*@
<div id="reg">

    <h2>@ViewData["Title"]</h2>
    
    @*Split into rows for cleaner layout*@
    <div class="row">
        @*Main content in one column / before button*@
        <div class="col-md-4">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <h4>Create a new account.</h4>
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input placeholder="example@example.com"asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input placeholder="6 to 100 characters" asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input placeholder="Retype password" asp-for="ConfirmPassword" class="form-control"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div><br>
                <button id="btn" type="submit">Register</button>
                
                @*Main content after button*@
                <br><br>
                <p><a asp-action="Login">Already Registered?</a></p>
            </form>
        </div>
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }

</div>